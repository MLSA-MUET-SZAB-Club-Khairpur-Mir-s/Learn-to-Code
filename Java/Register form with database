    private void registerActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
          String id = ID.getText();
          String password = String.valueOf(ps.getPassword());
        try{
            Class.forName("com.mysql.jdbc.Driver");
            //root is username 1234 is password
           Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/abc","root","1234"); 
            Statement s = conn.createStatement();
            String query = "INSERT INTO logins VALUES('"+id+"','"+password+"')";
           
            s.execute(query);
            s.close();
            JOptionPane.showMessageDialog(ID,"User Inserted");
            this.setVisible(false);
            new Login().setVisible(true);
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(ID,"Connection error");
            
        }
        
    }                                        

