public class NewClass { 
    public static void main(String[] args) {
       for(int i=7;i>0;i--)
        {
            for(int n=8-i;n>0;n--){
                System.out.print(" "); // creates space before writing on the line .
         }
            for(int k=0;k<i;k++){
                System.out.print("* ");   // this will print stars.
            } 
            System.out.println("");       // for making line
        }

}}
